#header
	%h1 Tweets for #tad012
#content
	%table
		%thead
			%tr
				%th User
				%th Tweet
				%th When
		%tbody
		- @tweets.each do |tweet|
			%tr
				%td
					%a{:href => "https://twitter.com/#{tweet.from_user}"}= tweet.from_user
				%td= tweet.text
				%td{:class => 'date'}
					%a{:href => "https://twitter.com/#{tweet.from_user}/status/#{tweet.twitter_id}"}= tweet.tweeted_at.in_time_zone("Europe/Helsinki").strftime('%d.%m.%Y, %H:%M')